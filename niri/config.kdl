prefer-no-csd true
// Input configuration
input {
    keyboard {
        xkb {
        }

        numlock
    }

    // Touchpad settings
    touchpad {
        tap
        natural-scroll
        scroll-method "two-finger"
    }

    mouse {
    }

    trackpoint {
    }

    // Focus follows mouse cursor
    focus-follows-mouse max-scroll-amount="0%"
}

// Display output configuration
output "eDP-1" {
    mode "1366x768"
    scale 1
    transform "normal"
    position x=0 y=0
}


// Window layout settings
layout {
    gaps 0

    // Column width presets (Mod+R)
    preset-column-widths {
        proportion 0.33333
        proportion 0.5
        proportion 0.66667
    }

    default-column-width { proportion 0.5; }

    // Window focus indicator
    focus-ring {
        off
        width 1
        active-color "#dadadaff"
        inactive-color "#505050"
    }

    // Window border (disabled)
    border {
        off
        width 1
        active-color "#ffc87f"
        inactive-color "#505050"
        urgent-color "#9b0000"
    }

    // Window shadow settings
    shadow {
        off
    }

    // Window padding/struts
    struts {
        left 0
        right 0
        top 0
        bottom 0
    }

    // Center new windows for smoother opening
    center-focused-column "never"
}

// Startup applications
spawn-at-startup "waybar" "-c" "/home/mishal/.config/waybar/config.jsonc" "-s" "/home/mishal/.config/waybar/style.css"
spawn-at-startup "swaybg" "-i" "/home/mishal/.config/niri/wallpapers/4.jpg" "-m" "fill"

// Notification daemon
spawn-at-startup "mako"

// SwayOSD server for volume/brightness OSD
spawn-at-startup "swayosd-server" "--style" "/home/mishal/.config/swayosd/style.css" "--top-margin" "0.85"

// X11 application support
spawn-at-startup "xwayland-satellite"

// Clipboard manager
spawn-at-startup "wl-paste" "--type" "text" "--watch" "cliphist" "store"
spawn-at-startup "wl-paste" "--type" "image" "--watch" "cliphist" "store"

// Auto-mount USB drives
spawn-at-startup "udiskie" "--tray"

// Battery low warning (only if battery exists)
spawn-at-startup "sh" "-c" "[ -d '/sys/class/power_supply/BAT'* ] && batsignal -w 20 -c 10 -d 5 || true"

// Idle and lock manager
// - Lock screen after 5 minutes of inactivity
// - Turn off monitors after 10 minutes (only if already locked)
// - Lock before system sleep
spawn-at-startup "swayidle" "-w" "timeout" "300" "/home/mishal/.config/swaylock/lock.sh" "timeout" "600" "niri msg action power-off-monitors" "resume" "niri msg action power-on-monitors" "before-sleep" "/home/mishal/.config/swaylock/lock.sh" "lock" "/home/mishal/.config/swaylock/lock.sh"

hotkey-overlay {
    skip-at-startup
}


screenshot-path "~/Pictures/Screenshots/Screenshot from %Y-%m-%d %H-%M-%S.png"

// Animation settings - buttery smooth
animations {
    workspace-switch {
        spring damping-ratio=1.0 stiffness=400 epsilon=0.0001
    }

    window-open {
        duration-ms 200
        curve "ease-out-expo"
    }

    window-close {
        duration-ms 150
        curve "ease-out-quad"
    }

    horizontal-view-movement {
        spring damping-ratio=1.0 stiffness=500 epsilon=0.001
    }

    window-movement {
        spring damping-ratio=1.0 stiffness=400 epsilon=0.001
    }

    window-resize {
        spring damping-ratio=1.0 stiffness=500 epsilon=0.001
    }

    config-notification-open-close {
        spring damping-ratio=0.6 stiffness=600 epsilon=0.001
    }

    screenshot-ui-open {
        duration-ms 200
        curve "ease-out-quad"
    }
}

// Window-specific rules
window-rule {
    match app-id=r#"^org\.wezfurlong\.wezterm$"#
    default-column-width {}
}

// Firefox picture-in-picture floating
window-rule {
    match app-id=r#"firefox$"# title="^Picture-in-Picture$"
    open-floating true
    default-column-width { fixed 480; }
    default-window-height { fixed 270; }
    default-floating-position x=32 y=32 relative-to="bottom-right"
}

// Development workspace assignment
window-rule {
    match app-id=r#"^code.*$"#
    open-on-workspace "1"
    open-maximized true
}

// Browser workspace assignment  
window-rule {
    match app-id=r#"^brave.*$"#
    open-on-workspace "2"
    open-maximized true
}

// Minecraft fullscreen without decorations
window-rule {
    match title="Minecraft"
    open-fullscreen true
}

// Block password managers from screen capture (disabled)
//window-rule {
//    match app-id=r#"^org\.keepassxc\.KeePassXC$"#
//    match app-id=r#"^org\.gnome\.World\.Secrets$"#
//    block-out-from "screen-capture"
//}

// Force sharp corners on all windows
window-rule {
    geometry-corner-radius 0
    clip-to-geometry true
}

// Floating terminal
window-rule {
    match app-id="floating-terminal"
    open-floating true
    default-column-width { fixed 680; }
    default-window-height { fixed 330; }
}

// Visual distinction for floating windows
window-rule {
    match is-floating=true
    shadow {
        on
    }
}

// Keybindings
binds {
    Mod+Shift+Slash { show-hotkey-overlay; }

    // Application launchers
    Alt+Return hotkey-overlay-title="Open a Terminal: kitty" { spawn "kitty"; }
    Alt+T hotkey-overlay-title="Open a Terminal: kitty" { spawn "kitty"; }
    Alt+Shift+Return hotkey-overlay-title="Floating Terminal" { spawn "kitty" "--class" "floating-terminal"; }
    Alt+Shift+T hotkey-overlay-title="Floating Terminal" { spawn "kitty" "--class" "floating-terminal"; }
    Alt+Space hotkey-overlay-title="Run an Application: fuzzel" { spawn "fuzzel"; }
    Mod+Space hotkey-overlay-title="Run an Application: fuzzel" { spawn "fuzzel"; }
    Mod+Return hotkey-overlay-title="Run an Application: fuzzel" { spawn "fuzzel"; }
    Alt+V hotkey-overlay-title="Clipboard History" { spawn-sh "cliphist list | fuzzel --dmenu | cliphist decode | wl-copy"; }
    Alt+L hotkey-overlay-title="Lock the Screen: swaylock" { spawn "/home/mishal/.config/swaylock/lock.sh"; }
    Alt+E hotkey-overlay-title="File Manager: nautilus" { spawn "nautilus"; }
    Alt+S allow-when-locked=true hotkey-overlay-title="Toggle Screen Reader" { spawn-sh "pkill orca || exec orca"; }

    // Wallpaper cycling
    Alt+B hotkey-overlay-title="Cycle Wallpaper" { spawn "/home/mishal/.config/niri/scripts/wallpaper-cycle.sh"; }
    Alt+Shift+B hotkey-overlay-title="Previous Wallpaper" { spawn "/home/mishal/.config/niri/scripts/wallpaper-cycle.sh" "prev"; }
    Alt+Ctrl+B hotkey-overlay-title="Random Wallpaper" { spawn "/home/mishal/.config/niri/scripts/wallpaper-cycle.sh" "random"; }
    Alt+Ctrl+Shift+B hotkey-overlay-title="Wallpaper Preview" { spawn "/home/mishal/.config/niri/scripts/wallpaper-cycle.sh" "preview"; }

    // Media keys
    XF86AudioRaiseVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "raise"; }
    XF86AudioLowerVolume allow-when-locked=true { spawn "swayosd-client" "--output-volume" "lower"; }
    XF86AudioMute        allow-when-locked=true { spawn "swayosd-client" "--output-volume" "mute-toggle"; }
    XF86AudioMicMute     allow-when-locked=true { spawn "swayosd-client" "--input-volume" "mute-toggle"; }

    XF86MonBrightnessUp allow-when-locked=true { spawn "swayosd-client" "--brightness" "raise"; }
    XF86MonBrightnessDown allow-when-locked=true { spawn "swayosd-client" "--brightness" "lower"; }

    Mod+O repeat=false { toggle-overview; }

    Alt+Q repeat=false { close-window; }
    Mod+Shift+Q hotkey-overlay-title="Force Kill Window" { spawn-sh "niri msg action close-window --force || true"; }

    // Window focus navigation
    Mod+Left  { focus-column-left; }
    Mod+Down  { focus-window-down; }
    Mod+Up    { focus-window-up; }
    Mod+Right { focus-column-right; }
    Mod+H     { focus-column-left; }
    Mod+J     { focus-window-down; }
    Mod+K     { focus-window-up; }
    Mod+L     { focus-column-right; }

    // Window movement
    Mod+Shift+Left  { move-column-left; }
    Mod+Shift+Down  { move-window-down; }
    Mod+Shift+Up    { move-window-up; }
    Mod+Shift+Right { move-column-right; }
    Mod+Shift+H     { move-column-left; }
    Mod+Shift+J     { move-window-down; }
    Mod+Shift+K     { move-window-up; }
    Mod+Shift+L     { move-column-right; }

    Mod+Home { focus-column-first; }
    Mod+End  { focus-column-last; }
    Mod+Ctrl+Home { move-column-to-first; }
    Mod+Ctrl+End  { move-column-to-last; }

    // Workspace navigation
    Mod+Page_Down      { focus-workspace-down; }
    Mod+Page_Up        { focus-workspace-up; }
    Mod+Ctrl+Page_Down    { move-column-to-workspace-down; }
    Mod+Ctrl+Page_Up      { move-column-to-workspace-up; }
    Mod+Alt+Shift+Down    { move-column-to-workspace-down; }
    Mod+Alt+Shift+Up      { move-column-to-workspace-up; }

    Mod+Shift+Page_Down { move-workspace-down; }
    Mod+Shift+Page_Up   { move-workspace-up; }

    // Mouse wheel workspace switching
    Mod+WheelScrollDown      cooldown-ms=150 { focus-workspace-down; }
    Mod+WheelScrollUp        cooldown-ms=150 { focus-workspace-up; }
    Mod+Ctrl+WheelScrollDown cooldown-ms=150 { move-column-to-workspace-down; }
    Mod+Ctrl+WheelScrollUp   cooldown-ms=150 { move-column-to-workspace-up; }

    Mod+WheelScrollRight      { focus-column-right; }
    Mod+WheelScrollLeft       { focus-column-left; }
    Mod+Ctrl+WheelScrollRight { move-column-right; }
    Mod+Ctrl+WheelScrollLeft  { move-column-left; }

    Mod+Shift+WheelScrollDown      { focus-column-right; }
    Mod+Shift+WheelScrollUp        { focus-column-left; }
    Mod+Ctrl+Shift+WheelScrollDown { move-column-right; }
    Mod+Ctrl+Shift+WheelScrollUp   { move-column-left; }

    // Workspace switching by number
    Mod+1 { focus-workspace 1; }
    Mod+2 { focus-workspace 2; }
    Mod+3 { focus-workspace 3; }
    Mod+4 { focus-workspace 4; }
    Mod+5 { focus-workspace 5; }
    Mod+6 { focus-workspace 6; }
    Mod+7 { focus-workspace 7; }
    Mod+8 { focus-workspace 8; }
    Mod+9 { focus-workspace 9; }
    Mod+Ctrl+1 { move-column-to-workspace 1; }
    Mod+Ctrl+2 { move-column-to-workspace 2; }
    Mod+Ctrl+3 { move-column-to-workspace 3; }
    Mod+Ctrl+4 { move-column-to-workspace 4; }
    Mod+Ctrl+5 { move-column-to-workspace 5; }
    Mod+Ctrl+6 { move-column-to-workspace 6; }
    Mod+Ctrl+7 { move-column-to-workspace 7; }
    Mod+Ctrl+8 { move-column-to-workspace 8; }
    Mod+Ctrl+9 { move-column-to-workspace 9; }

    Alt+Tab { focus-workspace-previous; }

    // Column management
    Mod+Comma  { consume-window-into-column; }
    Mod+Period { expel-window-from-column; }

    Mod+R { switch-preset-column-width; }
    Mod+Shift+R { switch-preset-window-height; }
    Mod+Ctrl+R { reset-window-height; }
    Mod+F { maximize-column; }
    Mod+Shift+F { fullscreen-window; }

    Mod+Ctrl+F { expand-column-to-available-width; }

    Mod+C { center-column; }
    Mod+Ctrl+C { center-visible-columns; }

    // Tiled resizing
    Mod+Ctrl+Left  { set-column-width "-10%"; }
    Mod+Ctrl+Right { set-column-width "+10%"; }
    Mod+Ctrl+Up    { set-window-height "-10%"; }
    Mod+Ctrl+Down  { set-window-height "+10%"; }

    // Floating window controls
    Mod+T { toggle-window-floating; }
    Mod+Shift+T { switch-focus-between-floating-and-tiling; }
    // Floating resizing (absolute window width/height)
    Mod+Shift+Ctrl+Left  { set-window-width "-10%"; }
    Mod+Shift+Ctrl+Right { set-window-width "+10%"; }
    Mod+Shift+Ctrl+Up    { set-window-height "-10%"; }
    Mod+Shift+Ctrl+Down  { set-window-height "+10%"; }

    Mod+W { toggle-column-tabbed-display; }

    // Screenshots
    Print { screenshot; }
    Ctrl+Print { screenshot-screen; }
    Mod+Print { screenshot-window; }

    // System controls
    Mod+Escape allow-inhibiting=false { toggle-keyboard-shortcuts-inhibit; }

    Alt+Shift+E { quit; }
    Ctrl+Alt+Delete { quit; }

    Alt+Shift+P { power-off-monitors; }
}
