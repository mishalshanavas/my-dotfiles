# Swaylock configuration - minimal monochrome with blurred screenshot

# Screenshot with blur effect
image=~/.cache/lockscreen-blur.png
scaling=fill

# Behavior
daemonize
show-failed-attempts
ignore-empty-password

# Prevent multiple unlock attempts
grace=2
grace-no-mouse
grace-no-touch

# Disable indicator after timeout
indicator-idle-visible
indicator-radius=100
indicator-thickness=10

# Font
font=SF Pro Text

# Colors - monochrome theme
color=000000
inside-color=00000000
ring-color=404040
line-color=00000000
text-color=e0e0e0
separator-color=00000000

# Ring colors for different states
inside-clear-color=00000000
ring-clear-color=808080
text-clear-color=e0e0e0

inside-ver-color=00000000
ring-ver-color=404040
text-ver-color=e0e0e0

inside-wrong-color=00000000
ring-wrong-color=666666
text-wrong-color=ffffff
